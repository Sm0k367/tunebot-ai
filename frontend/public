    <script>
        // Simple demo interactions
        document.querySelector('.chat-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const message = this.value.trim();
                if (message) {
                    addMessage(message, 'user');
                    this.value = '';
                    
                    // Simulate bot response
                    setTimeout(() => {
                        addMessage("Great idea! I'll create that for you. Generating your custom track now... üéµ", 'bot');
                    }, 1000);
                }
            }
        });

        document.querySelector('.send-btn').addEventListener('click', function() {
            const input = document.querySelector('.chat-input');
            const message = input.value.trim();
            if (message) {
                addMessage(message, 'user');
                input.value = '';
                
                setTimeout(() => {
                    addMessage("Great idea! I'll create that for you. Generating your custom track now... üéµ", 'bot');
                }, 1000);
            }
        });

        function addMessage(text, type) {
            const chatContainer = document.querySelector('.chat-container');
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${type}-message`;
            messageDiv.textContent = text;
            chatContainer.appendChild(messageDiv);
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }

        // Demo play button
        document.querySelector('.control-btn').addEventListener('click', function() {
            if (this.textContent === '‚ñ∂Ô∏è') {
                this.textContent = '‚è∏Ô∏è';
                document.querySelector('.waveform').style.animation = 'pulse 1s infinite';
            } else {
                this.textContent = '‚ñ∂Ô∏è';
                document.querySelector('.waveform').style.animation = 'none';
            }
        });
    </script>

    <style>
        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.7; }
            100% { opacity: 1; }
        }
    </style>
